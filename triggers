UPDATE TRIGGER
 CREATE OR REPLACE TRIGGER ty
  2  AFTER UPDATE OF sid ON sailors
  3  FOR EACH ROW
  4  BEGIN
  5
  6      IF :NEW.sid < 80 THEN
  7     
  8          RAISE_APPLICATION_ERROR(-20017, 'cant update: New SID must be 80 or greater.');
  9      END IF;
 10  END;
 11  /
