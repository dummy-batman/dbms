delete data from 
CREATE OR REPLACE TRIGGER T3
BEFORE DELETE ON Sailors 
FOR EACH ROW
BEGIN
    IF :OLD.S_ID = 22 THEN 
        RAISE_APPLICATION_ERROR(-20002, 'You cannot delete this row (S_ID 22 is protected).');
    END IF;
END;
/
DELETE FROM Sailors WHERE S_ID = 22;

