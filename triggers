pl/sql code for creation of trigger to inseert data into a table


CREATE OR REPLACE TRIGGER t
BEFORE INSERT ON Sailors
FOR EACH ROW
BEGIN
    :NEW.SName := UPPER(:NEW.SName);
END;
/

INSERT INTO sailors VALUES(99, 'jennie', 8, 30);

________________________________________________
UPDATE TRIGGER
 CREATE OR REPLACE TRIGGER ty
    AFTER UPDATE OF s_id ON sailors
    FOR EACH ROW
    BEGIN
        IF :NEW.s_id < 80 THEN
         RAISE_APPLICATION_ERROR(-20017, 'cant update: New SID must be 80 or greater.');
        END IF;
   END;
   /
UPDATE Sailors SET S_ID = 79 WHERE S_ID = 64;
UPDATE Sailors SET S_ID = 90 WHERE S_ID = 64;

